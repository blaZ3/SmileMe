<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:padding="@dimen/paddingNormal">

    <ImageView
        android:id="@+id/imgConfirmImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/txtConfirmImageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:hint="@string/str_hint_title"/>

    <EditText
        android:id="@+id/txtConfirmImageComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:hint="@string/str_hint_comment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginNormal">
        <Button
            android:id="@+id/btnConfirmImageCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/marginHalf"
            android:background="@drawable/button_background"
            android:textAppearance="@style/ButtonNormal"
            android:text="@string/str_txt_cancel"/>
        <Button
            android:id="@+id/btnConfirmImageOkay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/marginHalf"
            android:background="@drawable/button_background"
            android:textAppearance="@style/ButtonNormal"
            android:text="@string/str_txt_okay"/>
    </LinearLayout>

</LinearLayout>