<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.AppBarOverlay.MenuWhite">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextPrimary" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextSecondary" parent="ButtonTextPrimary">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ButtonNormal" parent="ButtonTextSecondary">
        <item name="android:paddingLeft">@dimen/paddingHalf</item>
        <item name="android:paddingRight">@dimen/paddingHalf</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="TextPrimary" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextSecondary" parent="TextPrimary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextNormal" parent="TextPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="TextTitle" parent="TextPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:padding">@dimen/paddingNormal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextTitleBold" parent="TextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextTitleAppName" parent="TextTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">@font/roboto_thin</item>
    </style>


    <color name="normal_text">#000</color>
</resources>
